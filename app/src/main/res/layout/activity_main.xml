<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <Button
        android:id="@+id/serializableActivity4Result"
        android:text="@string/SerializableActivity4Result"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/parcelableActivity4Result"
        android:text="@string/ParcelableActivity4Result"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/customControl4Title"
        android:text="@string/CustomControl4Title"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listview"
        android:textAllCaps="false" />

    <LinearLayout
        android:id="@+id/id_rv"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view"
            android:layout_weight="1"
            android:text="@string/recyclerview"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rv_vertview"
            android:layout_weight="1"
            android:text="@string/rvvert"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rv_waterfallview"
            android:layout_weight="1"
            android:text="@string/rvWaterfallView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ui_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/uipractice"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/frag_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frag_btn"
        android:textAllCaps="false" />

    <!--start:broadcast-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bc_std"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bc_std"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bc_ord"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bc_ord"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bc_cut"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bc_cut"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/bc_lcl"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bc_lcl"
            android:textAllCaps="false" />

    </LinearLayout>

    <Button
        android:id="@+id/bc_eg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bc_eg"
        android:textAllCaps="false" />

    <!--start:data persistent-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dp_file"
            android:text="文件"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dp_sp"
            android:text="SharedPref"
            android:layout_weight="1"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dp_db_cd"
            android:text="Db操作"
            android:layout_weight="1"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>